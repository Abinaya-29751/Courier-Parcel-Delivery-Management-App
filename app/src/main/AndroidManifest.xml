<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Add the permission for notifications -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />



    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourierApp"
        tools:targetApi="31">

        <!-- LoginActivity is the launcher -->
        <activity
            android:name=".activities.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.CourierApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MainActivity (not launcher, no need to export) -->
        <activity
            android:name=".activities.MainActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

        <!-- RegisterActivity -->
        <activity
            android:name=".activities.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

        <!-- HomeActivity -->
        <activity
            android:name=".activities.HomeActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

        <!-- AdminDashboardActivity -->
        <activity
            android:name=".activities.AdminDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

        <!-- UserDashboardActivity -->
        <activity
            android:name=".activities.UserDashboardActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

        <!-- TrackingActivity (Added to fix the crash) -->
        <activity
            android:name=".activities.TrackingActivity"
            android:exported="false"
            android:theme="@style/Theme.CourierApp" />

    </application>
</manifest>
